{
  "name": "remotion-news",
  "version": "1.0.0",
  "description": "AI News Video Generator",
  "scripts": {
    "start": "remotion studio",
    "render": "remotion render src/index.ts out/video.mp4",
    "build": "remotion render src/index.ts out/video.mp4",
    "fetch": "tsx fetch-news.ts",
