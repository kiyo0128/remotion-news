    "automate": "npm run fetch && npm run render-daily"
  },
  "dependencies": {
    "@remotion/cli": "^4.0.0",
    "@remotion/player": "^4.0.0",
    "google-tts-api": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remotion": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.0.0"
  }
}
